{
  "welcomeFile": "/cp.portal/index.html",
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/ds/(.*)$",
      "target": "$1",
      "authenticationType": "xsuaa",
      "destination": "datasphere"
    },
    {
      "source": "^/srv/(.*)$",
      "target": "$1",
      "authenticationType": "xsuaa",
      "destination": "srv_api"
    },

    {
      "source": "^/cp.portal/(.*)$",
      "target": "$1",
      "localDir": "./launchpad",
      "authenticationType": "xsuaa",
       "csrfProtection": false
    },
    
{
      "source": "^/app/(.*)$",
      "target": "$1",
      "authenticationType": "xsuaa",
      "destination": "srv_api"
    }

]
}