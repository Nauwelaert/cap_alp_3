{
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/base/(.*)$",
      "target": "/base/$1",
      "authenticationType": "xsuaa",
      "destination": "srv-api",
      "csrfProtection": false
    },
    {
      "source": "^/ds/(.*)$",
      "target": "$1",
      "authenticationType": "xsuaa",
      "destination": "datasphere"
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "csrfProtection": false
    }
  ]
}