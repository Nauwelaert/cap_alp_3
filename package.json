{
  "name": "cap-alp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4",
    "@sap/approuter": "^20.8.2",
    "@sap/cds": "^9.3.1",
    "@sap/ux-ui5-tooling": "^1.19.0",
    "@sap/xsenv": "^5.4.0",
    "@sap/xssec": "^4.2.7",
    "@ui5/cli": "^4.0.30",
    "express": "^4",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@sap/cds-dk": "^9.4.1",
    "@sap/ux-specification": "^1.128.0",
    "@types/express": "^5.0.3",
    "@ui5/cli": "^4.0.30",
    "copyfiles": "2.4.1",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.2.2",
    "@types/xml2js": "^0.4.14",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds watch --profile hybrid",
    "watch-alp-v4": "cds watch --open alp-v4/webapp/index.html?sap-ui-xx-viewCache=false",
    "dev": "cds watch",
    "build": "cds build",
    "cflogin:maxeda:dev": "cf login -a https://api.cf.eu30.hana.ondemand.com/ --sso",
    "cftarget:maxedev": "cf target -o \"Maxeda DIY B.V._maxeda-bwz-dev\" -s \"BWZ_dev\"",
    "mta:build": "mbt build",
    "deploy": "cf deploy mta_archives/cap-alp.mtar",
    "approuter:local": "npm run local --prefix ./localapprouter",
    "srv:local": "npm run dev --prefix ./srv",
    "start:approuterdev": "cds bind --exec -- npm run start --prefix Localapprouter --profile hybrid",
    "watch-poc_alp": "cds watch --open pocalp/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "features": {
      "odata_new_parser": true
    },
    "requires": {
      "datasphere": {
        "kind": "odata-v4",
        "crsf": true,
        "credentials": {
          "destination": "datasphere",
          "forwardAuthToken": true,
          "path": "datasphere/consumption/analytical"
        }
      },
      "db": false
    },
    "folders": {
      "db": "false"
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/poc_alp"
  ]
}
